#!/usr/bin/env bash
set -e
if [[ ! -d "/home/Mitchy/dev/Bootcamp/projects/week-6-step" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/Mitchy/dev/Bootcamp/projects/week-6-step")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/Mitchy/dev/Bootcamp/projects/week-6-step" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/Mitchy/dev/Bootcamp/projects/week-6-step/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/Mitchy/dev/Bootcamp/projects/week-6-step/.envrc" "/home/Mitchy/dev/Bootcamp/projects/week-6-step/.direnv"/*.rc
